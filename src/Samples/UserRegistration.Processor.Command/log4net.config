<?xml version="1.0" encoding="utf-8" ?>
<log4net debug="false">
  <appender name="rollingFileAppender" type="log4net.Appender.RollingFileAppender,log4net">
    <param name="File" value="log\\umizoo\\"/>
    <param name="AppendToFile" value="true"/>
    <!--<param name="LockingModel" value="log4net.Appender.FileAppender+MinimalLock"/>-->
    <!-- Date, Size, Composite -->
    <param name="RollingStyle" value="Composite"/>
    <param name="DatePattern" value="yyyyMMdd'.log'"/>
    <param name="StaticLogFileName" value="false"/>
    <!--<param name="MaxSizeRollBackups" value="-1"/>-->
    <param name="MaximumFileSize" value="2MB"/>
    <param name="CountDirection" value="1"/>
    <layout type="log4net.Layout.PatternLayout,log4net">
      <conversionPattern value="%date [%thread](%file:%line) %-5level %logger [%property{NDC}] - %message%newline"/>
    </layout>
  </appender>
  <appender name="consoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>
  </appender>
  <appender name="coloredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
    <threshold value="DEBUG"></threshold>
    <mapping>
      <level value="ERROR" />
      <foreColor value="White" />
      <backColor value="Red" />
    </mapping>
    <mapping>
      <level value="WARN" />
      <foreColor value="White" />
      <backColor value="Yellow" />
    </mapping>
    <mapping>
      <level value="INFO" />
      <backColor value="Green" />
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %-5level %message [%property{NDC}] %logger [%thread] %newline " />
    </layout>
  </appender>
  <logger additivity="false" name="Umizoo">
    <level value="DEBUG" />
    <appender-ref ref="coloredConsoleAppender"/>
  </logger>
  <logger additivity="false" name="Kafka.Client.Consumers.ZookeeperConsumerConnector">
    <level value="ERROR" />
    <appender-ref ref="rollingFileAppender"/>
  </logger>
  <root>
    <!--all priority options： OFF、FATAL、ERROR, WARN, INFO, DEBUG, ALL-->
    <level value="ERROR"/>
    <appender-ref ref="coloredConsoleAppender"/>
  </root>
</log4net>